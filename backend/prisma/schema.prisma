generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  category    String
  price       Decimal  @db.Decimal(10, 2)
  images      String[]
  videoUrl    String?
  sellerId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sellerId])
}
